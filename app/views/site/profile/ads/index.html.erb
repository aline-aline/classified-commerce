<h1>Listando Anúncios</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th>Imagem</th>
      <th>Título</th>
      <th>Categoria</th>
      <th>Preço</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @ads.each do |ad| %>
      <tr>
        <th scope="row"><%= ad.id %></th>
        <th><%= image_tag ad.picture(:thumb) %></th>
        <th><%= ad.title %></th>
        <th><%= ad.category.description %></th>
        <th><%= humanized_money_with_symbol ad.price %></th>
        <th>
          <%= link_to edit_site_profile_ad_path(ad.id), class: "btn btn-primary btn-sm" do %>
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
          <% end %>
        </th>
      </tr>
    <% end %>
  </tbody>
</table>